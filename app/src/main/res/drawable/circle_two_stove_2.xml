<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/outerStove2">
        <shape
            android:shape="oval">
            <padding
                android:bottom="30dp"
                android:left="30dp"
                android:right="30dp"
                android:top="30dp"/>
            <stroke
                android:width="2dp"
                android:color="@android:color/black"/>
        </shape>
    </item>
    <item android:id="@+id/innerStove2">
        <shape
            android:shape="oval">
            <size
                android:width="80dp"
                android:height="80dp"/>
            <stroke
                android:width="2dp"
                android:color="@android:color/black"/>
        </shape>

    </item>
</layer-list>