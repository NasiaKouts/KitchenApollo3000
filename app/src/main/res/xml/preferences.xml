<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_name_key"
        android:title="@string/pref_name_title"
        android:summary="@string/pref_name_summary"
        android:dialogTitle="@string/pref_name_dialog_title"
        android:defaultValue=" "
        android:inputType="textCapWords"/>

    <CheckBoxPreference
        android:key="@string/pref_speech_enabled_key"
        android:summary="@string/pref_speech_enabled_summary"
        android:title="@string/pref_speech_enabled_title"
        android:defaultValue="true"/>

    <PreferenceCategory
        android:title="@string/pref_auto_close_category_title"
        android:key="@string/pref_auto_close_category_key"
        android:summary="@string/pref_auto_close_category_summary">

        <CheckBoxPreference
            android:key="@string/pref_auto_close_stoves_key"
            android:summary="@string/pref_auto_close_stoves_summary"
            android:title="@string/pref_auto_close_stoves_title"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="@string/pref_auto_close_oven_key"
            android:summary="@string/pref_auto_close_oven_summary"
            android:title="@string/pref_auto_close_oven_title"
            android:defaultValue="false"/>
    </PreferenceCategory>

</PreferenceScreen>